#include <iostream>
#include <windows.h>

using namespace std;

int main()
{

int dd, mm, aaaa, d1, m1, aaa1, soma1, soma2, soma3;

cout << "Digite apenas o dia da primeira data : ";
 cin >> dd;
cout << "Digite apenas o numero do mes da primeira data: ";
 cin >> mm;
cout << "Digite apenas o ano da primeira data: ";
 cin >> aaaa;
cout << "Digite apenas o dia da segunda data: ";
 cin >> d1;
cout << "Digite apenas o numero do mes da segunda data: ";
 cin >> m1;
cout << "Digite apenas o ano da segunda data: ";
 cin >> aaa1;

    soma1 = d1-dd;
    soma2 = m1-mm;
    soma3 = aaa1-aaaa;

cout << "\n==================================================================\n\n";

//===========================================================================================//

if (((dd == 31) && (((mm == 2) || ( mm == 4)) || ((mm == 6) || (mm == 9)) || (mm == 11))) || ((d1 == 31) && (((m1 == 2) || (m1 == 4)) || ((m1 == 6) || (m1 == 9)) || (m1 == 11)))) {
 cout << "Valores Invalidos\n";
}
else {
 if (((dd == 30) && (mm == 2)) || ((d1 == 30) && (m1 == 2))) {
  cout << "Valores invalidos\n";
 }

 else {

  if (((dd > -1) && (dd < 32)) && ((d1 > -1) && (d1 < 32)) && ((mm > -1) && (mm < 13)) && ((m1 > -1) && (m1 < 13))) {

// Em caso de data1 < data2

   if ((soma3 > 0) || (((soma3 == 0) && (soma2 > 0)) || ((soma3 == 0) && (soma2 == 0) && (soma1 > 0)))) {
    if (((soma2 == 0) && (soma1 < 0)) || (soma2 < 0)) {
     soma3 = soma3 - 1;
    }

    if (soma1 < 0) {
     soma1 = soma1 + 30;
     soma2 = soma2 - 1;
    }

    if (soma2 < 0) {
     soma2 = soma2 + 12;
    }

    if ((soma1 >= 0) && (soma2 == 0)) {
     soma2 = 0;
    }

    if (soma2 == 12) {
     soma2 = 0;
    }

    if ((soma1 == 30) || (soma1 == 31)) {
     soma1 = 0;
     soma2 = soma2 + 1;
    }

     cout << "Se passaram "<< soma3 <<" ano(s), "<< soma2 <<" mes(es) e "<< soma1 <<" dia(s).\n";
   }

//===========================================================================================//

// Em caso de data1 = data2

   if ((soma3 == 0) && (soma2 == 0) && (soma1 == 0)) {
    cout << "Mesma data\n";
   }

//===========================================================================================//

// Em caso de data1 > data2

   if (((soma3 < 0) || (((soma3 == 0) && (soma2 < 0)) || ((soma3 == 0) && (soma2 == 0) && (soma1 < 0)))))  {
    if (((soma2 == 0) && (soma1 > 0)) || (soma2 > 0)) {
     soma3 = soma3 + 1;
    }

    if (soma1 > 0) {
     soma1 = soma1 - 30;
     soma2 = soma2 + 1;
    }

    if (soma2 > 0) {
     soma2 = soma2 - 12;
    }

    if ((soma1 <= 0) && (soma2 == 0)) {
     soma2 = 0;
    }

    if (soma2 == 12) {
     soma2 = 0;
    }

    if ((soma1 == -30) || (soma1 == -31)) {
     soma1 = 0;
     soma2 = soma2 - 1;
    }

    soma1 = soma1 * -1;
    soma2 = soma2 * -1;
    soma3 = soma3 * -1;

   cout << "Faltam "<< soma3 << " ano(s), "<< soma2 << " mes(es) e "<< soma1 <<" dia(s).\n";
   }

  }
   else {
    cout << "Valores invalidos\n";
   }

 }

}


//===========================================================================================//

cout << "\n==================================================================\n";

system("PAUSE>null");

    return 0;
}
